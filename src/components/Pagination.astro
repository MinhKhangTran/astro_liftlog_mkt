---
export interface Props {
  prevUrl: string;
  nextUrl: string;
}

const { prevUrl, nextUrl } = Astro.props;
---

<style lang="scss">
.nav {
  display: flex;
  margin-inline:auto;
  padding-top:4rem;
  
  
}

.prev,
.next {
  
  text-transform: uppercase;
  font-size: 0.8em;

  &[href="#"] {
    display: none;
  }
}

.prev {
  margin-right: auto;
}

.next {
  margin-left: auto;
}

</style>

<div class="">
  <nav class="nav">
    <a class="prev" href={prevUrl || '#'} aria-label="Previous Page">Previous Page</a>
    <a class="next" href={nextUrl || '#'} aria-label="Next Page">Next Page</a>
  </nav>
</div>
